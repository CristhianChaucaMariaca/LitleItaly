mixin platosPastas(link,img,text,price_uno,price_dos,price_tres,category)
    .dishes__plate
        a(href=link).dishes__link
            picture.dishes__picture
                img.dishes__img(alt=text,srcset="media/"+category+"/thumbnail/"+img+"-thumbnail.jpg",loading="lazy")
        .dishes__name
            p.dishes__text #{text}
            if (price_uno)
                p.dishes__price Bs&nbsp;#{price_uno.monto}
            if (price_dos) 
                p.dishes__price &nbsp;-&nbsp;#{price_dos.monto}
            if (price_tres) 
                p.dishes__price &nbsp;-&nbsp;#{price_tres.monto}
extends ../templates/template-dishes
include ../mixins/platos
block append config
    - page = pizzas.name //TODO: * Modificar nombre de objeto
    - metadescripcion = pizzas.descripcion //TODO: * Modificar nombre de objeto
block content
    .content-dishes
        .dishes
            // TODO: * Modificar el | INCLUDE | y la variable de objetos
            each plate in pizzas.content
                if(plate.status === true)
                    +platos(plate.link,plate.img,plate.text,plate.price_uno,plate.price_dos,plate.price_tres,pizzas.category)